{
  "manifest_version": 3,
  "name": "Chrome Extension TypeScript Starter",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js",
        "js/inject.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "activeTab",
    "unlimitedStorage",
    "notifications"
  ],
  "optional_permissions": [
    "topSites"
  ],
  

  "web_accessible_resources": [{
    "resources": [
      "js/inject.js"
    ],
    "matches": [
      "<all_urls>"
    ]
  }],
  "host_permissions": [
    "<all_urls>"
  ]
}
